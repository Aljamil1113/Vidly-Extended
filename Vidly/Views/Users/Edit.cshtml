@model Vidly.ViewModels.UserRolesViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit User</h2>

@using (Html.BeginForm("Edit", "Users"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.ApplicationUsers.UserName)
        @Html.TextBoxFor(m => m.ApplicationUsers.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ApplicationUsers.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ApplicationUsers.Email)
        @Html.TextBoxFor(m => m.ApplicationUsers.Email, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ApplicationUsers.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ApplicationUsers.DrivingLicense)
        @Html.TextBoxFor(m => m.ApplicationUsers.DrivingLicense, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ApplicationUsers.DrivingLicense)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ApplicationUsers.MobileNumber)
        @Html.TextBoxFor(m => m.ApplicationUsers.MobileNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ApplicationUsers.MobileNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RoleName)
        @Html.DropDownListFor(m => m.RoleName, new SelectList(Model.Roles), "Select Role", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RoleName)
    </div>

    @Html.HiddenFor(m => m.ApplicationUsers.Id)
    @Html.AntiForgeryToken();

    <button type="submit" class="btn btn-primary">Save</button>
}
